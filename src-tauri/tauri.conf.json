{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "track-work",
  "version": "0.1.0",
  "identifier": "com.track-work.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Track Work",
        "width": 1000,
        "height": 800
      },
      {
        "label": "screenshot_popup",
        "title": "Screenshot",
        "url": "/screenshot-popup",
        "width": 500,
        "height": 500,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
