{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "track-work",
  "version": "0.1.0",
  "identifier": "com.track-work.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Track Work",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "listen-event-capability",
          "description": "",
          "windows": ["main", "screenshot_popup"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-unlisten"
          ]
        },
        {
          "identifier": "main-capability",
          "description": "",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-create",
            "core:event:allow-emit",
            "core:event:allow-emit-to"
          ]
        },
        {
          "identifier": "popup-capability",
          "description": "My application capability used for all windows",
          "windows": ["screenshot_popup"],
          "permissions": ["core:window:allow-close"]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
